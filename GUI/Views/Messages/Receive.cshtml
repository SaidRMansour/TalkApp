@model List<GUI.Controllers.DecryptedMessageViewModel>
@{
    ViewData["Title"] = "Modtag Beskeder";
}

<h1>Modtag Beskeder</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Ingen beskeder modtaget.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Afsender</th>
                <th>Besked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.SenderName</td>
                    <td>@message.Content</td>
                </tr>
            }
        </tbody>
    </table>
}
